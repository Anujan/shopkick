<form method="POST" action="<%= @promotion.persisted? ? admin_promotion_url(@promotion) : admin_promotions_url %>">
  <div class="form-group">
    <label for="code">Code</label>
    <input type="text" name="promotion[code]" value="<%= @promotion.code %>" id="code">
  </div>

  <%= '<input type="hidden" name="_method" value="PUT">'.html_safe if @promotion.persisted? %>
  <div class="form-group">
    <label for="limit">Limit</label>
    <input name="promotion[limit]" id="limit" type="number">
    <span>Leave blank for no limit</span>
  </div>

  <div class="form-group">
    <label for="start_date">Start Date</label>
    <input name="promotion[start_date]" id="start_date" type="date">
  </div>

  <div class="form-group">
    <label for="end_date">End Date</label>
    <input name="promotion[end_date]" id="end_date" type="date">
    <span>Leave blank for no expiration</span>
  </div>

  <div class="form-group">
    <label for="option">Discount Type</label>
    <select name="promotion[option]" id="option">
      <% Promotion::OPTIONS.each do |option| %>
        <option value="<%= option %>"><%= option %></option>
      <% end %>
    </select>
  </div>
  
  <% #TODO JAVASCRIPT FOR PROMOTIONS %>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group button-group">
    <a href="<%= admin_promotions_url %>" class="btn cancel_btn">Cancel</a>
    <input type="submit" value="Save">
  </div>
</form>