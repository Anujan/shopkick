<h1>Products</h1>
<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Price</th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.title, admin_product_url(product) %></td>
      <td><%= product.category %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= link_to "Edit", edit_admin_product_url(product) %></td>
    </tr>
  <% end %>
</table>
<%= link_to "New Product", new_admin_product_url %>