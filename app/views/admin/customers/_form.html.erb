<form method="POST" action="<%= @customer.persisted? ? admin_customer_url(@customer) : admin_customers_url %>">
  <div class="form-group">
    <label for="first_name">First Name</label>
    <input type="text" name="customer[first_name]" value="<%= @customer.first_name %>" id="first_name">
  </div>
  <div class="form-group">
    <label for="last_name">Last Name</label>
    <input type="text" name="customer[last_name]" value="<%= @customer.last_name %>" id="last_name">
  </div>
  <div class="form-group">
    <label for="email">Email Address</label>
    <input type="text" name="customer[email_address]" value="<%= @customer.email_address %>" id="email">
  </div>
  <%= render "shared/address_form", model: @customer, key: 'customer' %>

  <%= '<input type="hidden" name="_method" value="PUT">'.html_safe if @customer.persisted? %>
  <div class="form-group">
    <label for="notes">Notes</label>
    <textarea name="customer[notes]" rows="8" cols="40"></textarea>
  </div>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group button-group">
    <a href="<%= admin_customers_url %>" class="btn cancel_btn">Cancel</a>
    <input type="submit" value="Save">
  </div>
</form>