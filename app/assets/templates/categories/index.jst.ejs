<h1>Categories</h1>
<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <th>Title</th>
    <th>Edit</th>
  </tr>
  <% categories.each(function(category) { %>
    <tr>
      <td>
        <a href="#categories/<%= category.id %>">
          <%= category.escape('title') %>
        </a>
      </td>
      <td class="button-group">
        <a class="btn" id="edit" href="#categories/<%= category.id %>/edit">Edit</a>
    	</td>
      <td class="button-group">
      	<a class="cancel_btn" id="delete" href="#categories" data-id=<%= category.id %>>
		 		Delete
      	</a>
      </td>
    </tr>
  <% }) %>
</table>
<a href="#categories/new">New Category</a>