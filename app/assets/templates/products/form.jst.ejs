<div class="alert error no-center">
  <% errors.forEach(function(error) { %>
    <p><%= error %></p>
  <% }) %>
</div>
<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="product[title]" value="<%= product.get('title') %>" id="title">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="product[description]" rows="8" cols="40"><%= product.get('description') %></textarea>
</div>
<div class="form-group">
  <label for="type">Category</label>
  <select name="product[category_id]" id="category">
    <% Shopkick.categoriesCollection.each(function(category) { %>
      <option value="<%= category.id %>"
        <% if (product.category_id == category.id) { print("selected"); } %>><%= category.get('title') %></option>
    <% }) %>
  </select>
</div>
<div class="form-group">
  <label for="vendor">Vendor</label>
  <input type="text" name="product[vendor]" value="<%= product.get('vendor') %>" id="vendor">
</div>
<div class="form-group">
  <label for="price">Price</label>
  <input type="number" name="product[price]" min="0.01" step="0.01" value="<%= product.get('price') %>" id="price">
</div>
<div class="form-group">
  <label for="old">Old Price</label>
  <input type="number" name="product[old_price]" min="0.01" step="0.01" value="<%= product.get('old_price') %>" id="old">
</div>
<div class="form-group">
  <label for="sku">SKU</label>
  <input type="text" name="product[sku]" value="<%= product.get('sku') %>" id="sku">
</div>
<div class="form-group">
  <label for="barcode">Barcode</label>
  <input type="text" name="product[barcode]" value="<%= product.get('barcode') %>" id="barcode">
</div>
<div class="form-group">
  <label for="visible">Visible?</label>
  <input type="checkbox" name="product[visible]" value="<%= product.get('visible') %>" id="visible" checked>
</div>

<div class="form-group">
  <label for="image_upload">Image</label>
  <input type="file" name="product[images_attributes][][photo]" id="image_upload">
</div>

<div class="form-group button-group">
  <a href="#products" class="btn cancel_btn">Cancel</a>
  <input type="submit" value="Save">
</div>
</form>